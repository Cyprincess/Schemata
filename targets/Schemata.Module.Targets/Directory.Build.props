<Project>

  <Import Project="$(MSBuildThisFileDirectory)..\..\Directory.Build.props" />

  <PropertyGroup>
    <TargetFrameworks>net6.0;net8.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Schemata.Abstractions\Schemata.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(UseDSLTargets)' == 'true' ">
    <ProjectReference Include="..\..\generators\Schemata.DSL\Schemata.DSL.csproj" PrivateAssets="all" />

    <None Include="$(SolutionDir)artifacts\bin\Schemata.DSL\$(Configuration)\netstandard2.0\*.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)\..\Empty.props" Pack="true">
      <PackagePath>build\$(AssemblyName).props</PackagePath>
    </None>
    <None Include="$(MSBuildThisFileDirectory)\..\Empty.targets" Pack="true">
      <PackagePath>build\$(AssemblyName).targets</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <None Include="$(MSBuildThisFileDirectory)Schemata.Module.Targets.props" Pack="true" PackagePath="build" />
    <None Include="$(MSBuildThisFileDirectory)Schemata.Module.Targets.targets" Pack="true" PackagePath="build" />
    <None Include="$(MSBuildThisFileDirectory)Package.Build.props" Pack="true" PackagePath="build" />
  </ItemGroup>

</Project>
